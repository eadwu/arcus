{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pkgbuilds: clean",
      "type": "shell",
      "command": "git ls-files --ignored --others --exclude-standard | xargs -d '\\n' rm"
    },
    {
      "label": "pkgbuilds: build",
      "type": "shell",
      "command": "makepkg -cs && mv *.xz ${workspaceFolder}/x86_64",
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "label": "pkgbuilds: generate",
      "type": "shell",
      "command": "makepkg --printsrcinfo > .SRCINFO",
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "label": "pkgbuilds: test",
      "type": "shell",
      "command": "namcap '${file}'"
    },
    {
      "label": "pkgbuilds: updpkgsums",
      "type": "shell",
      "command": "updpkgsums",
      "options": {
        "cwd": "${fileDirname}"
      }
    }
  ]
}
